@model Answers

@{
    ViewData["Title"] = "Create";
}


<h1>@(ViewBag.question)</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AnswerText">Your Answer</label>
        <input asp-for="AnswerText" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="AnswerDateAndTime">Date and Time</label>
        <input asp-for="AnswerDateAndTime" class="form-control">
    </div>


    <input type="hidden" asp-for=QuestionID />

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-controller="Home" asp-action="Questions" class="btn btn-primary">Cancel</a>
</form>

<h1>Answers</h1>
@foreach (Answers a in ViewBag.answers)
{
    <p>@a.AnswerText</p>
}
